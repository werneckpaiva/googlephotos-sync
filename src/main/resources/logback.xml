<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/googlephotos-sync.log</file>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>


    <logger name="com.werneckpaiva.googlephotosbatch" level="info" />

    <root level="error">
        <appender-ref ref="FILE" />
    </root>
</configuration>